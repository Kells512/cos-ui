{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts", "example"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@kas-connectors/api": ["packages/api/src"],
      "@kas-connectors/machines": ["packages/machines/src"],
      "@kas-connectors/configurator": ["packages/configurator/src"],
      "@kas-connectors/cli": ["packages/cli/src"],
      "$test/*": ["test/*"]
    }
  }
}
