    "@openapitools/openapi-generator-cli": "2.1.7",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "cypress": "^5.2.0",
    "lerna": "^3.15.0",
    "openapi-merge-cli": "^1.1.29",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.14.0",
    "typescript": "^3.9.7",

    "@babel/core": "7.13.15",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "babel-loader": "8.2.2",
    "bundle-loader": "0.5.6",
    "html-webpack-plugin": "5.3.1",
    "serve": "11.3.2",
    "webpack": "5.33.2",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "3.11.2",
    "css-loader": "^5.0.0",
    "file-loader": "^6.1.1",
    "raw-loader": "^4.0.2",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "svg-url-loader": "^6.0.0",
    "url-loader": "^4.1.1",
    "dotenv-webpack": "^4.0.0",

    "@patternfly/react-core": "^4.87.2",
    "@patternfly/react-icons": "^4.7.11",
    "@patternfly/react-styles": "^4.7.8",
    "@xstate/react": "^1.3.1",
    "xstate": "^4.17.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel --ignore @kas-connectors/cli",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build",
    "prepublish": "yarn run api:generate && lerna run prepublish",
    "start:app": "yarn run build && yarn --cwd example && yarn --cwd example start",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "api:generate": "openapi-merge-cli && openapi-generator-cli generate -i mas-mock/merged-openapi.yaml -g typescript-axios -o packages/api --additional-properties=ngVersion=6.1.7,npmName=@kas-connectors/api,supportsES6=true,withInterfaces=true --skip-validate-spec"
  }
}
